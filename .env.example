# Example environment variables for development
# Copy this file to .env and update with your actual values

# Service Base URLs (different for each microservice)
VITE_UPLOAD_API_BASE_URL=https://your-upload-api-url.com
VITE_ANALYSIS_API_BASE_URL=http://localhost:8000
VITE_SUMMARIZER_API_BASE_URL=http://localhost:8000
VITE_CHATBOT_API_BASE_URL=http://localhost:8000

# Upload Service Endpoints
VITE_DOCUMENT_UPLOAD_ENDPOINT=/documents/upload

# Analysis & Summarization Service Endpoints
VITE_DOCUMENT_SUMMARIZE_ENDPOINT=/api/v1/documents/summarize
VITE_AUDIO_CONVERT_ENDPOINT=/api/v1/audio/pdf-to-speech

# Health Check Endpoints
VITE_HEALTH_CHECK_ENDPOINT=/health
VITE_HEALTH_DETAILED_ENDPOINT=/health/detailed
VITE_HEALTH_SERVICES_ENDPOINT=/health/services
VITE_HEALTH_METRICS_ENDPOINT=/health/metrics

# Chatbot Endpoints
VITE_CHATBOT_ENDPOINT=/api/v1/chat

# Feature Flags
VITE_ENABLE_ADVANCED_ANALYSIS=true
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_AUDIO_CONVERSION=true

# Development settings
VITE_ENV=development